<div class="col-md-6">
  <div class="card bg-light w-90 mx-auto mb-3">

    <div class="card-body">

      <h5 class="card-title">{{ prediction.name }}</h5>

      <p><span class="badge badge-secondary"><a href="{{ '/predictors/' + predictor_map[prediction.predictor]._id +'/' | url }}">
        {{ predictor_map[prediction.predictor].name }}
      </a></span></p>

      <p class="card-text">
        {{ prediction.summary }}
      </p>

      {% if prediction.details %}
        <p class="card-text"><small class="text-muted">
          {{ prediction.details }}
        </small></p>
      {% endif %}
      {% if prediction.isResolved %}

        {% if prediction.isResolvedTrue %}
          <p><span class="badge badge-success">RESOLVED TRUE</span></p>
        {% else %}
          <p><span class="badge badge-danger">RESOLVED FALSE</span></p>
        {% endif %}

        <p class="card-text">
          <b>RESOLUTION NOTES:</b>
          {{ prediction.resolutionNotes }}
        </p>
      {% endif %}
      {% if prediction.link %}
        <a href="{{ prediction.link }}" class="card-link" target="_blank">Link</a>
      {% endif %}
    </div>

    {% if prediction.imgUrl %}
      <img class="card-img-bottom" src="{{ prediction.imgUrl }}">
    {% endif %}
  </div>
</div>